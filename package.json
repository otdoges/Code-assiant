{
  "name": "code-explorer",
  "displayName": "Code Explorer",
  "description": "AI coding assistant powered by GitHub marketplace models",
  "version": "0.2.1",
  "author": "otdoges",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-explorer.showSidebar",
        "title": "Show Code Explorer",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "code-explorer.clearConversation",
        "title": "Clear Conversation",
        "icon": "$(trash)"
      },
      {
        "command": "code-explorer.enhancePrompt",
        "title": "Enhance Prompt",
        "icon": "$(sparkle)"
      },
      {
        "command": "code-explorer.showSettings",
        "title": "Show Settings",
        "icon": "$(gear)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "code-explorer",
          "title": "Code Explorer",
          "icon": "media/icon.svg"
        }
      ]
    },
    "v  iews": {
      "code-explorer": [
        {
          "type": "webview",
          "id": "code-explorer.sidebar",
          "name": "Code Explorer",
          "icon": "media/icon.svg"
        }
      ]
    },
    "configuration": {
      "title": "Code Explorer",
      "properties": {
        "code-explorer.githubToken": {
          "type": "string",
          "default": "",
          "description": "Your GitHub Personal Access Token (PAT) with 'models:read' permission. This token will be sent to a Microsoft service for model inference."
        },
        "code-explorer.selectedModel": {
          "type": "string",
          "default": "openai/o4-mini",
          "enum": [
            "openai/o4-mini",
            "openai/gpt-4.1",
            "meta/Llama-4-Scout-17B-16E-Instruct",
            "anthropic/claude-3-5-sonnet-20240620"
          ],
          "enumDescriptions": [
            "OpenAI O4 Mini - Smaller, faster model, good for general tasks.",
            "OpenAI GPT-4.1 - Powerful model with advanced reasoning capabilities.",
            "Meta Llama 4 Scout - Capable instruction-following model.",
            "Anthropic Claude 3.5 Sonnet - New model with strong performance."
          ],
          "description": "Select the AI model to use for chat completions."
        },
        "code-explorer.temperature": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 1,
          "description": "Controls the randomness of the output. Lower values (e.g., 0.2) make the output more focused and deterministic, higher values (e.g., 0.8) make it more creative."
        },
        "code-explorer.saveHistory": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable saving of conversation history locally."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile-prod",
    "compile": "webpack",
    "compile-prod": "webpack --mode production --devtool hidden-source-map",
    "watch": "webpack --watch",
    "package": "npm run compile-prod && vsce package",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "dotenv": "^16.5.0",
    "openai": "^4.28.0"
  }
}
